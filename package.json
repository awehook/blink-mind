{
  "private": true,
  "name": "blink-mind",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0",
  "author": "awehook <awehook@163.com>",
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn build",
    "storybook": "start-storybook -p 6007",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "prettier": "prettier --write 'packages/*/src/**'",
    "pre-commit": "yarn lint:fix && yarn prettier && yarn lint:ts",
    "test": "lerna run test",
    "lint": "tslint --project .",
    "lint:fixall": "tslint --fix --project .",
    "lint:ts": "tslint 'packages/**/*.ts{,x}' -e '**/*.test.ts'",
    "lint:fix": "tslint --fix 'packages/**/*.ts{,x}' -e '**/*.test.ts'",
    "clean": "lerna run clean",
    "build": "yarn clean && rollup --config rollup.config.js",
    "debug-build": "node --inspect-brk ./node_modules/.bin/rollup --config rollup.config.js",
    "link-package": "cd support && sh yarn-link.sh link",
    "unlink-package": "cd support && sh yarn-link.sh unlink"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@storybook/addon-actions": "5.2.5",
    "@storybook/addon-docs": "^5.2.6",
    "@storybook/addon-links": "5.2.5",
    "@storybook/addon-notes": "^5.2.6",
    "@storybook/addon-storysource": "^5.2.6",
    "@storybook/addons": "5.2.5",
    "@storybook/polymer": "^5.2.6",
    "@storybook/react": "5.2.5",
    "@storybook/storybook-deployer": "^2.8.1",
    "@storybook/theming": "^5.2.6",
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.2",
    "@types/react": "^16.9.17",
    "awesome-typescript-loader": "5.2.1",
    "babel-loader": "^8.0.6",
    "file-loader": "^5.0.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.1",
    "lit-html": "^1.1.2",
    "marked": "^0.7.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.5",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-css-porter": "^1.0.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.25.2",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.1.0",
    "tslint": "5.10.0",
    "typescript": "^3.5.3",
    "typescript-plugin-styled-components": "^1.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  }
}
