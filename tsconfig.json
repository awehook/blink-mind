{
  "compilerOptions": {
    "experimentalDecorators": true,
    "suppressExcessPropertyErrors": true,
    "downlevelIteration": true,
    "allowJs": true,
//    "declaration": true,
    "outDir": "./lib",
    "target": "es5",
    "strictNullChecks": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["dom", "es2015"],
    "paths": {
      "@blink-mind/core": ["packages/core/src"],
      "@blink-mind/renderer-react": ["packages/renderer-react/src"],
      "@blink-mind/plugin-json-serializer": ["packages/plugin-json-serializer/src"],
      "@blink-mind/plugin-simple-text-editor": ["packages/plugin-simple-text-editor/src"],
      "@blink-mind/plugin-rich-text-editor": ["packages/plugin-rich-text-editor/src"],
      "@blink-mind/plugin-theme-selector": ["packages/plugin-theme-selector/src"]
    }
  },
  "include": ["packages/*/src","stories/"],
  "exclude": [ "node_modules", "**/*.spec.ts", "./dist"]
}
